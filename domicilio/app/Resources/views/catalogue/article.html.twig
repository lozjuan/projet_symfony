{% extends 'base.html.twig' %}

{% block body %}
    <h2 class = "page-header">Domicilio eStore Catalogue</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>Article</th>
        </tr>
        </thead>
        <tbody>
        {% for article in catalogue %}
            <tr>
                <th scope="row">{{article.id}}</th>
                <td>{{article.name}}</td>
                <td>{{article.price}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
